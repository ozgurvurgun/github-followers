{
    "manifest_version": 3,
    "name": "Github Followers",
    "version": "1.0",
    "description": "Github Followers App",
    "permissions": ["activeTab"],
    "icons": {
      "16": "public/image/icon16.png",
      "32": "public/image/icon32.png",
      "48": "public/image/icon48.png",
      "128": "public/image/icon128.png"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "public/javascript/background.js"
    }
  }
  